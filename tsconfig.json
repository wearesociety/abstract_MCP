{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": "./",
        "types": [
            "node"
        ],
        "verbatimModuleSyntax": true
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ]
}